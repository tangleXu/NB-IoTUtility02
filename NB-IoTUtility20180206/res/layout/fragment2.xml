						            android:id="@+id/btnF2UDPConnect"
						            android:layout_width="fill_parent"
						            android:layout_height="50dp"
						            android:layout_weight="1"
						            android:textColor="#bbb"
						            android:textSize="12sp"
						            android:text="连接" />
						        <Button
						            android:id="@+id/btnF2UDPSend"
						            android:layout_width="fill_parent"
						            android:layout_height="50dp"
						            android:layout_weight="1"
						            android:textColor="#bbb"
						            android:textSize="12sp"
						            android:text="发送数据" />
						        
		             </LinearLayout>
             
     		</LinearLayout>    		
 </LinearLayout>


</LinearLayout> 
 </ScrollView>


    
