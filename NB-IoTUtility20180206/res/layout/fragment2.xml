							</EditText>      
		                <TextView
		                    android:layout_width="fill_parent"
		                    android:layout_height="wrap_content"
		                    android:layout_weight="1"
		                    android:textColor="#ddd"
		                    android:textSize="12sp"
		                    android:text="PORT:" />
		                <EditText
		                    android:id="@+id/etF2UDPPort"
				            android:layout_width="fill_parent"
				            android:layout_height="wrap_content"
				            android:layout_weight="1"
				            android:textSize="12sp"
				            android:textColor="#dc8242"
				            android:text="8080"
				             > 
							</EditText>  
				    </LinearLayout>
				   <LinearLayout
				        android:layout_width="fill_parent"
				        android:layout_height="wrap_content"
				        android:orientation="vertical" >
		                <TextView
		                    android:layout_width="fill_parent"
		                    android:layout_height="wrap_content"
		                    android:layout_weight="1"
		                    android:textColor="#ddd"
		                    android:textSize="12sp"
		                    android:text="接收数据:" />
		                <TextView
		                    android:id="@+id/tvF2UDPRxData"
		                    android:layout_width="fill_parent"
		                    android:layout_height="60dp"
		                    android:layout_weight="1"
		                    android:textColor="#ddd"
		                    android:background="#222"
		                    android:textSize="12sp"
		                    android:text="" />      
		                <TextView
		                    android:layout_width="fill_parent"
		                    android:layout_height="wrap_content"
		                    android:layout_weight="1"
		                    android:textColor="#ddd"
		                    android:textSize="12sp"
		                    android:text="发送数据:" />
		                <EditText
		                    android:id="@+id/etF2UDPTxData"
				            android:layout_width="fill_parent"
				            android:layout_height="wrap_content"
				            android:layout_weight="1"
				            android:textSize="12sp"
				            android:background="#222"
				            android:textColor="#ddccbb"
				            android:text="TX DATA"
				             > 
							</EditText>  
				    </LinearLayout>
		            <LinearLayout
		                 android:layout_width="fill_parent"
