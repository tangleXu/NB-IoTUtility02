				            android:id="@+id/btnF2LteCatm1Only"
				            android:layout_width="fill_parent"
				            android:layout_height="50dp"
				            android:layout_weight="1"
				            android:textSize="12sp"
				            android:textColor="#bbb"
				            android:text="LTE CatM1 only" />
				
				        <Button
				            android:id="@+id/btnF2LteNBOnly"
				            android:layout_width="fill_parent"
				            android:layout_height="50dp"
				            android:layout_weight="1"
				            android:textColor="#bbb"
				            android:textSize="12sp"
				            android:text="LTE NB only" />
				        <Button
				            android:id="@+id/btnF2LteBoth"
				            android:layout_width="fill_parent"
				            android:layout_height="50dp"
				            android:layout_weight="1"
				            android:textColor="#bbb"
				            android:textSize="12sp"
				            android:text="LTE CatM1 and NB" />
				    </LinearLayout>
     		</LinearLayout>
     		
