                    android:layout_height="wrap_content"
                    android:background="#828282"
                    android:layout_weight="1"
                    android:text="TCP数据业务:" />
				   <LinearLayout
				        android:layout_width="fill_parent"
				        android:layout_height="wrap_content"
				        android:orientation="horizontal" >
		                <TextView
		                    android:layout_width="fill_parent"
		                    android:layout_height="wrap_content"
		                    android:layout_weight="1"
		                    android:textColor="#ddd"
		                    android:textSize="12sp"
		                    android:text="SERVER:" />
		                <EditText
		                    android:id="@+id/etF2TCPServerIP"
				            android:layout_width="fill_parent"
				            android:layout_height="wrap_content"
				            android:layout_weight="1"
				            android:textSize="12sp"
				            android:textColor="#dc8242"
				            android:text="139.196.113.149"
				             > 
							</EditText>      
		                <TextView
		                    android:layout_width="fill_parent"
		                    android:layout_height="wrap_content"
		                    android:layout_weight="1"
		                    android:textColor="#ddd"
		                    android:textSize="12sp"
		                    android:text="PORT:" />
		                <EditText
		                    android:id="@+id/etF2TCPServerPORT"
				            android:layout_width="fill_parent"
				            android:layout_height="wrap_content"
				            android:layout_weight="1"
				            android:textSize="12sp"
				            android:textColor="#dc8242"
				            android:text="8080"
				             > 
							</EditText>  
				    </LinearLayout>
				   <LinearLayout
