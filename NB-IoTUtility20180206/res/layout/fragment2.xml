			android:id="@+id/btnF2eDRX"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:textSize="12sp"
            android:textColor="#bbb"
            android:text="eDRX配置" />

        <Button
			android:id="@+id/btnF2PSM"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:textSize="12sp"
            android:textColor="#bbb"
            android:text="PSM配置" />
        <Button
			android:id="@+id/btnF2QueryAPN"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:textSize="12sp"
            android:textColor="#bbb"
            android:text="查询APN" />

        <Button
			android:id="@+id/btnF2QueryPLMN"
