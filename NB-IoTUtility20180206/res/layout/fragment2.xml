<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:attr="http://schemas.android.com/apk/res/com.example.nb_iotutility"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#424242"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_cfg_title"
        android:layout_width="fill_parent"
        android:layout_height="30sp"
        android:gravity="center"
        android:text="Configuration(配置)"
        android:textColor="#bbb"
        android:textSize="22sp" />
     <ScrollView
         android:id="@+id/scrollView1"
         android:layout_width="match_parent"
         android:layout_height="wrap_content" >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
         >    
   <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnF2Attach"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:textSize="12sp"
            android:textColor="#bbb"
            android:text="Attach" />

        <Button
            android:id="@+id/btnF2Detach"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:textSize="12sp"
            android:textColor="#bbb"
            android:text="Detach" />
        <Button
            android:id="@+id/btnF2EnablePPP"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:textSize="12sp"
            android:textColor="#bbb"
            android:text="启动PPP" />

        <Button
            android:id="@+id/btnF2DisablePPP"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:textColor="#bbb"
            android:textSize="12sp"
            android:text="停止PPP" />
    </LinearLayout>
   <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:orientation="horizontal" >

        <Button

            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:textSize="12sp"
            android:textColor="#bbb"
            android:text="eDRX配置" />

        <Button

            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:textSize="12sp"
            android:textColor="#bbb"
            android:text="PSM配置" />
        <Button

            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:textSize="12sp"
            android:textColor="#bbb"
            android:text="查询APN" />

        <Button

            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:textColor="#bbb"
            android:textSize="12sp"
            android:text="查询PLMN" />
    </LinearLayout>
   <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:orientation="horizontal" >

        <Button

            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:textSize="12sp"
            android:textColor="#bbb"
            android:text="查询状态" />

        <Button

            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:textSize="12sp"
            android:textColor="#bbb"
            android:text="查询IMSI" />
        <Button

            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:textSize="12sp"
            android:textColor="#bbb"
            android:text="查询IMEI" />

        <Button

            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:textColor="#bbb"
            android:textSize="12sp"
            android:text="查询CSQ" />
    </LinearLayout>
     <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#333"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#bbb"
                
                android:text="网络参数" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
               android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tvNetwork"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textColor="#ddd"
                    android:textSize="12sp"
                    android:text="PLMN:" />
                <EditText
		            android:id="@+id/editText1"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		          android:layout_weight="1"
		            android:textSize="12sp"
		            android:textColor="#dc8242"
		            android:text="46000"
		             > 
					</EditText>
	        <Button
	            android:id="@+id/btnF2ManualCfgNet"
	            android:layout_width="fill_parent"
	            android:layout_height="50dp"
	            android:layout_weight="2"
	            android:textColor="#bbb"
	            android:textSize="12sp"
	            android:text="手动选网" />		        
            	</LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
               android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tvNetwork"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textColor="#ddd"
                    android:textSize="12sp"
                    android:text="APN:" />
                <EditText
		            android:id="@+id/editText1"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		          android:layout_weight="1"
		            android:textSize="12sp"
		            android:textColor="#dc8242"
		            android:text="cmnet"
		             > 
					</EditText>
	        <Button
	            android:id="@+id/btnF2ManualCfgNet"
	            android:layout_width="fill_parent"
	            android:layout_height="50dp"
	            android:layout_weight="2"
	            android:textColor="#bbb"
	            android:textSize="12sp"
	            android:text="配置APN" />		        
            	</LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#626262"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tvNetwork2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#828282"
                    android:layout_weight="1"
                    android:text="网络搜索模式:" />
   <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnF2Attach"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:textColor="#bbb"
            android:textSize="12sp"
            android:text="AUTO模式" />

        <Button
            android:id="@+id/btnF2Detach"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:textColor="#bbb"
            android:textSize="12sp"
            android:text="GSM ONLY" />
        <Button
            android:id="@+id/btnF2EnablePPP"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:textColor="#bbb"
            android:textSize="12sp"
            android:text="LTE ONLY" />

        <Button
            android:id="@+id/btnF2DisablePPP"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:textColor="#bbb"
            android:textSize="12sp"
            android:text="GSM LTE" />
    </LinearLayout>
           
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#626262"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tvNetwort3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#828282"
                    android:layout_weight="1"
                    android:text="LTE搜索模式:" />
   <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnF2Attach"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:textSize="12sp"
            android:textColor="#bbb"
            android:text="LTE CatM1 only" />

        <Button
            android:id="@+id/btnF2Detach"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:textColor="#bbb"
            android:textSize="12sp"
            android:text="LTE CatM1 only" />
        <Button
            android:id="@+id/btnF2EnablePPP"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:textColor="#bbb"
            android:textSize="12sp"
            android:text="LTE CatM1 only" />
    </LinearLayout>
     </LinearLayout>
 </LinearLayout>

     <ImageView
         android:id="@+id/imageView1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:src="@drawable/poc" />
</LinearLayout> 
 </ScrollView>


    
</LinearLayout>